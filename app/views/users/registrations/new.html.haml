.row.valign-wrapper
  .col.s12.m6.offset-m3.valign
    .card.z-depth-2
      .card-content
        %h1.card-title Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "users/shared/error_messages", resource: resource
          .row
            = f.fields_for :user_role do |r|
              = r.hidden_field :role_id, value: r.object.role_id.presence || @role.id
            .input-field.col.s12.m6
              = f.label :first_name
              = f.text_field :first_name, autofocus: true, autocomplete: "name"
            .input-field.col.s12.m6
              = f.label :last_name
              = f.text_field :last_name, autocomplete: "name"
            .input-field.col.s12
              = f.label :email
              = f.email_field :email, autocomplete: "email"
            .input-field.col.s12
              = f.label :password
              = f.password_field :password, autocomplete: "new-password"
              - if @minimum_password_length
                %span.helper-text
                  (#{@minimum_password_length} characters minimum)
            .input-field.col.s12
              = f.label :password_confirmation
              = f.password_field :password_confirmation, autocomplete: "new-password"
            .col.s12.text-center
              = f.submit "Sign up", class: 'waves-effect waves-light btn'
      .card-action
        = render "users/shared/links"
