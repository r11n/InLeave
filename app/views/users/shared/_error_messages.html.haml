- if resource.errors.any?
  #error_explanation.collection.with-header{:role => "alert"}
    %h5.collection-header.flow-text
      = I18n.t("errors.messages.not_saved",                 |
        count: resource.errors.count,                       |
        resource: resource.class.model_name.human.downcase) |
    - resource.errors.full_messages.each do |message|
      %l.collection-item= message
- if notice
  .row
    .card-panel.green.col.s12.white-text
      %p.pt-10.pb-10
        = notice
- if alert
  .row
    .card-panel.red.darken-3.col.s12.white-text
      %p.pt-10.pb-10
        = alert

